<h1>All Posts</h1>
<ol>
  <% @posts.each do |post| %>
  <hr>
    <li>
      <p><%= link_to post.title, post_path(post) %></p>
      <p><%= link_to post.link, 'http://'+post.link %></p>
      <p><%= post.created_at %></p>
      <p>posted by <%= link_to post.user.name, user_path(post.user) %></p>
    </li>
  <% end %>
  <hr>
</ol>
