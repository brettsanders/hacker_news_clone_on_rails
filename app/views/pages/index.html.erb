<h1>All Posts</h1>
<table id="allposts">
  <thead>
    <th>Link</th>
    <th>Submitted by</th>
    <th>Comments</th>
    <th>vote up</th>
    <th>vote down</th>
    <th>vote count</th>
  </thead>
  <% @posts.each do |post|%>
  <tr id="postrow">
    <td>
      <p><%= link_to post.link, 'http://'+post.link %></p>
    </td>
    <td>
      <p><%= link_to post.user.name, user_path(post.user) %></p>
    </td>
    <td>
      <p>ADD LINK TO COMMENTS</p>
    </td>
    <td>
      <p>ADD VOTE UP LINK</p>
    </td>
    <td>
      <p>ADD VOTE DOWN LINK</p>
    </td>
    <td>
      <p>ADD TOTAL COUNT</p>
    </td>
  </tr>  
  <% end %>
</table>
